<div class="row">
    <div class="col-sm-12">
    {{#each headline}}
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">{{title}}</h3>
                    <p class="card-text">{{summary}}... <a href="{{link}}" target="blank">Read More</a></p>
                <button type="button" class="btn btn-info saveBtn" data-id="{{id}}">Save Article</button>
                <button type="button" class="btn btn-info modalBtn" data-toggle="modal" data-target="#{{id}}">Notes</button>
                    
            <div class="modal" id="{{id}}" tabindex="-1" role="dialog" aria-labelledby="notesModel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="notesModal">Notes for:<br />{{title}}</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="userCmnt{{id}}"></div>
                                <input id="noteInput{{id}}" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Leave your comment here"/>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-info newComment" data-id="{{id}}" type="submit">Save Note</button>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    <br />
    {{/each}}
    </div>
</div>